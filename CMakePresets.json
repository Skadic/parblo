{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 4,
    "patch": 1
  },
  "include": [],
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default Build (optimized+debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/relwithdebinfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Config",
      "description": "Unoptimized with debug symbols",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "inherits": "default"
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "description": "Optimized without debug symbols",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "inherits": "default"
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Release Config with Debug Info",
      "description": "Optimized with debug symbols",
      "inherits": "default"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "targets": [
        "copy-compile-commands",
        "tests"
      ]
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "inherits": "default"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "inherits": "default"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo",
      "inherits": "default"
    },
    {
      "name": "compile-commands",
      "configurePreset": "default",
      "targets": "copy-compile-commands"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "inherits": "relwithdebinfo"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "relwithdebinfo"
        },
        {
          "type": "build",
          "name": "relwithdebinfo"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    }
  ]
}
