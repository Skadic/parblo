{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default Build (Ninja Multi-Config)",
            "inherits": "multi"
        },
        {
            "name": "multi",
            "displayName": "Ninja Multi-Config",
            "description": "Ninja build with multi config",
            "binaryDir": "${sourceDir}/build/multi",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo;Release;Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "multi",
            "configuration": "RelWithDebInfo",
            "targets": [
                "copy-compile-commands",
                "parblo_tests"
            ]
        },
        {
            "name": "debug",
            "inherits": "default",
            "configuration": "Debug" 
        },
        {
            "name": "release",
            "inherits": "default",
            "configuration": "Release" 
        },
        {
            "name": "relwithdebinfo",
            "inherits": "default",
            "configuration": "RelWithDebInfo" 
        },
        {
            "name": "compile-commands",
            "inherits": "default",
            "targets": "copy-compile-commands"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "multi",
            "configuration": "RelWithDebInfo",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "relwithdebinfo",
            "inherits": "default"
        },
        {
            "name": "debug",
            "inherits": "default",
            "configuration": "Debug"
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "steps": [
                {
                    "type": "configure",
                    "name": "multi"
                },
                {
                    "type": "build",
                    "name": "relwithdebinfo"
                },
                {
                    "type": "test",
                    "name": "relwithdebinfo"
                }
            ]
        }
    ]
}
